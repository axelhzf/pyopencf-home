<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="job.xsl"?>

<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNameSpaceSchemaLocation="job.xsd">
	<name>Hello World!</name>
	<service_name>helloworld</service_name>
	<binary>bin/helloworld</binary>
	<description>Simplest application ever</description>
	<argument type="integer">
		<name>num</name>
		<sdesc>Number of greetings</sdesc>
	</argument>
	<output_file>
		<name>out</name>
		<description>Fichero de salida</description>
	</output_file>
</job>
